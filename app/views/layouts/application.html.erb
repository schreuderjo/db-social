<!DOCTYPE html>
<html>
<head>
  <title>phasebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>


<body>

  <header>

    <div class="logo">
      <%= link_to "/" do %>
        phasebook
      <% end %>
    </div>
    <!-- <div class="login"> -->

    <div class="header-links">

      <ul>


        <% if !current_user %>
          <li class="recruit"><em>join the madness now</em></li>
        <% end %>


        <% if current_user %>
          <li class="feed-link"><%= link_to "Feed", "/" %></li>
          <li><%= link_to "DBC Resources", resources_path %></li>
          <li><%= link_to "My profile", user_path(current_user) %></li>
          <li><%= link_to "Logout", "/sessions/#{current_user.id}" , method: :delete %></li>
        <%end%>

      </ul>

    </div>

  </header>

  <div class="container">

    <%= yield %>

  </div>

</body>
</html>
