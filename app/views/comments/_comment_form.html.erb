<%= form_for :comment, url: posts_path, html: {id: "new-comment", data_attr: post.id}, remote: true do |f| %>

  <% flash.each do |key, value| %>
    <p><%= value %></p>
  <% end %>

  <p>
    <%= f.label "New Comment" %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit "Comment"%>
  </p>
<% end %>
